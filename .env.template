# WatsonX Tool Tester Environment Configuration

# Client Type (watsonx or litellm)
WATSONX_CLIENT_TYPE=watsonx

# WatsonX API Configuration
WATSONX_URL=https://us-south.ml.cloud.ibm.com
WATSONX_APIKEY=your_watsonx_api_key_here
WATSONX_PROJECT_ID=your_watsonx_project_id_here
WATSONX_REGION=us-south

# LiteLLM Proxy Configuration
LITELLM_URL=http://localhost:4000
LITELLM_TOKEN=your_litellm_token_here

# Testing Configuration
WATSONX_MODEL=                  # Optional: specify a model to test
WATSONX_SORT=name               # Sort results by: name, tool_call_time, response_time, total_time
WATSONX_DEBUG=false             # Enable debug mode: true or false
WATSONX_LOG_DIR=tool_test_logs  # Directory for logs
WATSONX_OUTPUT_FILE=            # Optional: file path to save results in JSON format